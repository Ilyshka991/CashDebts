<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="horizontal">

    <TextView
        style="@style/TextViewBold"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:text="@string/layout_debt_role_title"
        android:textSize="24sp" />

    <com.google.android.material.chip.ChipGroup
        android:id="@+id/chip_container"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="16dp"
        app:checkedChip="@+id/chip_creditor"
        app:chipSpacing="16dp"
        app:singleLine="true"
        app:singleSelection="true">

        <com.google.android.material.chip.Chip
            android:id="@+id/chip_creditor"
            style="@style/ChipStyle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/layout_debt_role_text_creditor" />

        <com.google.android.material.chip.Chip
            android:id="@+id/chip_debtor"
            style="@style/ChipStyle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/layout_debt_role_text_debtor" />
    </com.google.android.material.chip.ChipGroup>
</LinearLayout>