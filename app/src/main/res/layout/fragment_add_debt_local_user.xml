<?xml version="1.0" encoding="utf-8"?>
<layout
        xmlns:app="http://schemas.android.com/apk/res-auto"
        xmlns:android="http://schemas.android.com/apk/res/android">

    <data>

        <import type="com.pechuro.cashdebts.ui.activity.adddebt.model.impl.LocalDebtInfo"/>

        <variable
                name="viewModel"
                type="com.pechuro.cashdebts.ui.activity.adddebt.AddDebtActivityViewModel"/>
    </data>

    <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

        <EditText
                android:id="@+id/text_name"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:inputType="textPersonName"
                android:ems="10"
                android:hint="Name"
                android:text="@={((LocalDebtInfo)viewModel.debt).name}"
                android:layout_marginStart="16dp"
                android:layout_marginTop="24dp"
                android:layout_marginEnd="16dp"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                style="@style/Widget.MaterialComponents.TextInputEditText.OutlinedBox"/>

        <TextView
                android:id="@+id/text_role"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="I am:"
                android:textSize="24sp"
                app:layout_constraintTop_toTopOf="@+id/chip_container"
                app:layout_constraintBottom_toBottomOf="@+id/chip_container"
                app:layout_constraintStart_toStartOf="@+id/text_name"
                app:layout_constraintVertical_bias="0.23000002"/>

        <com.google.android.material.chip.ChipGroup
                android:id="@+id/chip_container"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginStart="8dp"
                android:layout_marginTop="24dp"
                app:is_person_debtor="@={((LocalDebtInfo)viewModel.debt).ownerDebtor}"
                app:singleLine="true"
                app:chipSpacing="16dp"
                app:singleSelection="true"
                app:checkedChip="@+id/chip_creditor"
                app:layout_constraintStart_toEndOf="@+id/text_role"
                app:layout_constraintEnd_toEndOf="@+id/text_name"
                app:layout_constraintTop_toBottomOf="@+id/text_name">

            <com.google.android.material.chip.Chip
                    android:id="@+id/chip_creditor"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="creditor"
                    android:checkable="true"/>

            <com.google.android.material.chip.Chip
                    android:id="@+id/chip_debtor"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="debtor"
                    android:checkable="true"/>
        </com.google.android.material.chip.ChipGroup>

        <Button
                android:id="@+id/button_ok"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Ok"
                android:textSize="18sp"
                android:layout_marginStart="16dp"
                android:layout_marginEnd="16dp"
                android:layout_marginTop="16dp"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/chip_container"
                style="@style/Widget.MaterialComponents.Button.TextButton"/>
    </androidx.constraintlayout.widget.ConstraintLayout>
</layout>