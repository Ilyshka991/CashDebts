<?xml version="1.0" encoding="utf-8"?>
<layout
        xmlns:app="http://schemas.android.com/apk/res-auto" xmlns:tools="http://schemas.android.com/tools"
        xmlns:android="http://schemas.android.com/apk/res/android">

    <data>
        <variable name="viewModel"
                  type="com.pechuro.cashdebts.ui.fragment.profileedit.ProfileEditFragmentViewModel"/>
    </data>

    <androidx.constraintlayout.widget.ConstraintLayout
            android:id="@+id/container_auth_phone"
            android:layout_width="match_parent"
            android:layout_height="match_parent">


        <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" tools:srcCompat="@tools:sample/avatars"
                android:id="@+id/image_avatar"
                app:layout_constraintEnd_toEndOf="parent" android:layout_marginEnd="8dp"
                app:layout_constraintStart_toStartOf="parent" android:layout_marginStart="8dp"
                android:layout_marginTop="8dp" app:layout_constraintTop_toTopOf="parent"/>
        <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/text_first_name" app:layout_constraintStart_toStartOf="parent"
                android:layout_marginStart="16dp" android:layout_marginTop="16dp"
                app:layout_constraintTop_toBottomOf="@+id/image_avatar" tools:text="Name"/>
        <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/text_last_name" app:layout_constraintStart_toEndOf="@+id/text_first_name"
                android:layout_marginStart="8dp" app:layout_constraintBaseline_toBaselineOf="@+id/text_first_name"
                tools:text="Last @string/app_name"/>
        <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/text_phone" app:layout_constraintStart_toStartOf="@+id/text_first_name"
                android:layout_marginTop="16dp"
                app:layout_constraintTop_toBottomOf="@+id/text_first_name" tools:text="Phone"/>
    </androidx.constraintlayout.widget.ConstraintLayout>
</layout>