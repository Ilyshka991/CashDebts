<?xml version="1.0" encoding="utf-8"?>
<layout
        xmlns:app="http://schemas.android.com/apk/res-auto"
        xmlns:android="http://schemas.android.com/apk/res/android">

    <data>
        <variable name="viewModel"
                  type="com.pechuro.cashdebts.ui.activity.auth.AuthActivityViewModel"/>
    </data>

    <androidx.constraintlayout.widget.ConstraintLayout
            android:id="@+id/container_auth_phone"
            android:layout_width="match_parent"
            android:layout_height="match_parent">

        <com.google.android.material.textfield.TextInputLayout
                android:id="@+id/text_phone_layout"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="Phone number"
                android:layout_marginTop="16dp"
                android:layout_marginBottom="16dp"
                android:layout_marginStart="16dp"
                android:layout_marginEnd="16dp"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintHorizontal_bias="0.0"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintVertical_bias="0.3">

            <com.google.android.material.textfield.TextInputEditText
                    android:id="@+id/text_phone"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:inputType="phone"
                    android:imeOptions="actionNext"
                    android:ems="10">

                <requestFocus/>
            </com.google.android.material.textfield.TextInputEditText>
        </com.google.android.material.textfield.TextInputLayout>

        <Button
                android:id="@+id/button_send_code"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:visibility="@{!viewModel.isLoading}"
                android:onClick="@{() -> viewModel.startPhoneNumberVerification(textPhone.getText().toString())}"
                android:text="Verify"
                android:textSize="24sp"
                android:layout_marginStart="16dp"
                android:layout_marginEnd="16dp"
                android:layout_marginTop="8dp"
                app:layout_constraintTop_toBottomOf="@+id/text_phone_layout"
                app:layout_constraintStart_toStartOf="@+id/text_phone_layout"
                app:layout_constraintEnd_toEndOf="@+id/text_phone_layout"
                style="@style/Widget.MaterialComponents.Button.TextButton"/>

        <ProgressBar
                android:id="@+id/progress"
                android:layout_width="0dp"
                android:layout_height="0dp"
                app:visibility="@{viewModel.isLoading}"
                app:layout_constraintStart_toStartOf="@+id/button_send_code"
                app:layout_constraintTop_toTopOf="@+id/button_send_code"
                app:layout_constraintEnd_toEndOf="@+id/button_send_code"
                app:layout_constraintBottom_toBottomOf="@+id/button_send_code"
                style="?android:attr/progressBarStyle"/>
    </androidx.constraintlayout.widget.ConstraintLayout>
</layout>