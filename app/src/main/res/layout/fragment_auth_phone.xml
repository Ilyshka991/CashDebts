<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:app="http://schemas.android.com/apk/res-auto"
        xmlns:android="http://schemas.android.com/apk/res/android">

    <data>
        <variable name="viewModel"
                  type="com.pechuro.cashdebts.ui.activity.auth.AuthActivityViewModel"/>
    </data>

    <androidx.constraintlayout.widget.ConstraintLayout
            android:id="@+id/container_auth_phone"
            android:layout_width="match_parent"
            android:layout_height="match_parent">

        <EditText
                android:id="@+id/text_country"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@{viewModel.countryData.name ?? @string/auth_invalid_country}"
                android:inputType="none"
                android:ems="12"
                android:editable="false"
                android:focusable="false"
                android:layout_marginStart="16dp"
                android:layout_marginTop="16dp"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintStart_toStartOf="parent"/>

        <com.pechuro.cashdebts.ui.custom.phone.PhoneNumberEditText
                android:id="@+id/text_phone"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:phone_number="@={viewModel.phoneNumber}"
                app:country_data="@{viewModel.countryData}"
                android:layout_marginStart="16dp"
                android:layout_marginEnd="16dp"
                android:layout_marginTop="16dp"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/text_country"/>

        <com.pechuro.cashdebts.ui.custom.progressbutton.ProgressButton
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginEnd="8dp"
                android:layout_marginTop="16dp"
                android:text="@string/auth_action_verify"
                android:onClick="@{() -> viewModel.startPhoneNumberVerification()}"
                app:show_progress="@{viewModel.isLoading}"
                app:layout_constraintStart_toStartOf="@+id/text_phone"
                app:layout_constraintEnd_toEndOf="@+id/text_phone"
                app:layout_constraintTop_toBottomOf="@+id/text_phone"/>
    </androidx.constraintlayout.widget.ConstraintLayout>
</layout>