<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <Button
        android:id="@+id/button_remote_debt"
        style="@style/TextButtonStyle"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="start|center_vertical"
        android:padding="16dp"
        android:text="@string/dialog_navigation_remote_debt"
        android:textColor="@color/colorBlack"
        android:textSize="18sp"
        app:icon="@drawable/ic_remote_debt"
        app:iconPadding="16dp"
        app:iconTint="@color/colorBlack" />

    <Button
        android:id="@+id/button_local_debt"
        style="@style/TextButtonStyle"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="start|center_vertical"
        android:padding="16dp"
        android:text="@string/dialog_navigation_local_debt"
        android:textColor="@color/colorBlack"
        android:textSize="18sp"
        app:icon="@drawable/ic_local_debt"
        app:iconPadding="16dp"
        app:iconTint="@color/colorBlack" />

    <Button
        android:id="@+id/button_profile"
        style="@style/TextButtonStyle"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="start|center_vertical"
        android:padding="16dp"
        android:text="@string/dialog_navigation_profile"
        android:textColor="@color/colorBlack"
        android:textSize="18sp"
        app:icon="@drawable/ic_user_profile"
        app:iconPadding="16dp"
        app:iconTint="@color/colorBlack" />
</LinearLayout>