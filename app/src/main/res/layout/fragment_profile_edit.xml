<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:tools="http://schemas.android.com/tools"
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto">

    <data>

        <variable
                name="viewModel"
                type="com.pechuro.cashdebts.ui.fragment.profileedit.ProfileEditFragmentViewModel"/>
    </data>

    <ScrollView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:fillViewport="true">

        <androidx.constraintlayout.widget.ConstraintLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

            <ImageView
                    android:id="@+id/image_photo"
                    android:layout_width="200dp"
                    android:layout_height="200dp"
                    android:layout_marginStart="8dp"
                    android:layout_marginTop="8dp"
                    android:layout_marginEnd="8dp"
                    app:image_avatar="@{viewModel.localAvatarPath ?? viewModel.data.fields.imageUrl}"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent"
                    tools:srcCompat="@tools:sample/avatars[3]"/>

            <com.google.android.material.textfield.TextInputLayout
                    android:id="@+id/text_first_name_layout"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="16dp"
                    android:layout_marginStart="16dp"
                    android:layout_marginEnd="16dp"
                    app:error="@{viewModel.data.errors.firstNameError}"
                    app:layout_constraintTop_toBottomOf="@+id/image_photo"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintEnd_toEndOf="parent">

                <com.google.android.material.textfield.TextInputEditText
                        android:layout_width="match_parent"
                        android:text="@={viewModel.data.fields.firstName}"
                        android:layout_height="match_parent"
                        android:hint="@string/profile_edit_hint_first_name"
                        android:inputType="textPersonName"/>
            </com.google.android.material.textfield.TextInputLayout>

            <com.google.android.material.textfield.TextInputLayout
                    android:id="@+id/text_last_name_layout"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="8dp"
                    app:error="@{viewModel.data.errors.lastNameError}"
                    app:layout_constraintTop_toBottomOf="@+id/text_first_name_layout"
                    app:layout_constraintStart_toStartOf="@+id/text_first_name_layout"
                    app:layout_constraintEnd_toEndOf="@+id/text_first_name_layout">

                <com.google.android.material.textfield.TextInputEditText
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:text="@={viewModel.data.fields.lastName}"
                        android:hint="@string/profile_edit_hint_last_name"
                        android:inputType="textPersonName"/>
            </com.google.android.material.textfield.TextInputLayout>

            <com.pechuro.cashdebts.ui.custom.progressbutton.ProgressButton
                    android:id="@+id/button_save"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/profile_edit_action_save"
                    android:textSize="18sp"
                    app:show_progress="@{viewModel.isLoading}"
                    android:enabled="@{viewModel.isConnectionAvailable}"
                    android:layout_marginTop="16dp"
                    android:layout_marginEnd="16dp"
                    android:layout_marginStart="16dp"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintTop_toBottomOf="@+id/text_last_name_layout"
                    app:layout_constraintStart_toStartOf="parent"
                    android:layout_marginBottom="8dp"
                    app:layout_constraintVertical_bias="0.0"
                    app:layout_constraintBottom_toTopOf="@+id/view_no_connection"/>

            <com.google.android.material.floatingactionbutton.FloatingActionButton
                    android:id="@+id/fab_take_photo"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:clickable="true"
                    android:focusable="true"
                    app:srcCompat="@drawable/ic_add_photo"
                    app:layout_constraintEnd_toEndOf="@+id/image_photo"
                    app:layout_constraintBottom_toBottomOf="@+id/image_photo"/>

            <include
                    android:id="@+id/view_no_connection"
                    layout="@layout/layout_no_connection"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    app:visibility="@{!viewModel.isConnectionAvailable}"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintBottom_toBottomOf="parent"/>
        </androidx.constraintlayout.widget.ConstraintLayout>
    </ScrollView>
</layout>