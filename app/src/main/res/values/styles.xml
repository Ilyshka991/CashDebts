<resources>

    <style name="AppTheme" parent="Base.Theme.MaterialComponents.Light.DarkActionBar">
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="actionMenuTextColor">@color/colorBlack</item>
        <item name="android:fontFamily">@font/sofia_pro_semi_bold</item>
        <item name="android:textSize">16sp</item>
        <item name="autoCompleteTextViewStyle">@style/SearchViewStyle</item>
    </style>

    <style name="AppTheme.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <style name="SplashTheme" parent="AppTheme.NoActionBar">
        <item name="android:background">@drawable/background_splash</item>
    </style>

    <style name="SearchViewStyle" parent="Widget.AppCompat.AutoCompleteTextView">
        <item name="android:textSize">20sp</item>
        <item name="android:textColor">@color/colorBlack</item>
        <item name="android:fontFamily">@font/sofia_pro_light</item>
    </style>

    <style name="FabStyle" parent="@style/Widget.MaterialComponents.FloatingActionButton">
        <item name="backgroundTint">@color/colorOrange</item>
        <item name="tint">@color/colorBlack</item>
        <item name="rippleColor">@color/colorGrayLightMiddle</item>
    </style>

    <style name="ChipStyle">
        <item name="android:textAppearance">@style/ChipTextAppearance</item>
        <item name="android:fontFamily">@font/sofia_pro_semi_bold</item>
        <item name="android:checkable">true</item>
        <item name="checkedIcon">@drawable/ic_chip_ok</item>
        <item name="rippleColor">@color/colorOrange</item>
    </style>

    <style name="ChipTextAppearance" parent="TextAppearance.MaterialComponents.Chip">
        <item name="android:textSize">18sp</item>
        <item name="android:fontFamily">@font/sofia_pro_light</item>
        <item name="android:textColor">@color/colorBlack</item>
    </style>

    <style name="SwitchStyle">
        <item name="android:fontFamily">@font/sofia_pro_light</item>
        <item name="android:textSize">18sp</item>
        <item name="android:backgroundTint">@color/colorTransparent</item>
        <item name="android:textColor">@color/colorBlack</item>
        <item name="android:switchPadding">8dp</item>
    </style>

    <style name="TextButtonStyle" parent="@style/Widget.MaterialComponents.Button.TextButton">
        <item name="android:textAllCaps">false</item>
        <item name="android:textColor">@color/colorBlack</item>
        <item name="android:fontFamily">@font/sofia_pro_semi_bold</item>
        <item name="rippleColor">@color/colorOrange</item>
    </style>

    <style name="EditTextStyle" parent="@style/Widget.AppCompat.EditText">
        <item name="android:fontFamily">@font/sofia_pro_light</item>
        <item name="android:textSize">20sp</item>
        <item name="android:textColorHint">@color/colorGrayMiddle</item>
        <item name="android:textColor">@color/colorBlack</item>
    </style>


    <style name="TextViewLight">
        <item name="android:fontFamily">@font/sofia_pro_light</item>
        <item name="android:textSize">15sp</item>
        <item name="android:gravity">center</item>
        <item name="android:backgroundTint">@color/colorTransparent</item>
        <item name="android:textColor">@color/colorBlack</item>
    </style>

    <style name="TextViewBold">
        <item name="android:fontFamily">@font/sofia_pro_semi_bold</item>
        <item name="android:gravity">center</item>
        <item name="android:backgroundTint">@color/colorTransparent</item>
        <item name="android:textColor">@color/colorBlack</item>
        <item name="android:includeFontPadding">false</item>
    </style>

</resources>
